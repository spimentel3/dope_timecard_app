<% provide(:title, "Login") %>

<div class="hide-on-small-and-down" style="padding-top: 32px"></div>
<div class="row">
  <div class="z-depth-2 white col s12 m8 offset-m2 l4 offset-l4" style="position: relative">
    <div class="center">
      <h2>Timecard Buddy</h2>
    </div>
    <div class="row" style="padding-bottom: 16px">
      <div class="col s12 m8 offset-m2">
        <%= form_for(:session, url: login_path) do |f| %>
          <div class="input-field">
            <%= f.email_field :email%>
            <%= f.label :email %>
          </div>

          <div class="input-field">
            <%= f.password_field :password%>
            <%= f.label :password %>
            <%= link_to "(forgot password)", new_password_reset_path, class: "theia_text_blue", style: "font-size: 8pt" %>
          </div>


          <div class="row" style="margin: 16px 0 8px 0">
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %>
              <span>Remember me on this computer</span>
            <% end %>
          </div>

          <%= f.submit "Login", class: "btn theia_blue", style: "margin-top: 16px;"%>
          <p class="right" style="position: relative; top: 6px;">New User? <%= link_to "Sign up here", signup_path, class: "theia_text_blue" %> </p>
        <% end %>
      </div>
    </div>
  </div>
</div>