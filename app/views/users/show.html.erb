<%= provide(:title, @user.name) %>

<div class="hide-on-small-and-down" style="padding-top: 32px"></div>
<div class="row">
  <div class="z-depth-2 white col s12 m10 offset-m1 l8 offset-l2" style="position: relative">
    <div class="row">
      <div class="col m3 hide-on-med-and-down center">
        <%= image_tag(gravatar_for(@user, 100), alt: @user.name, style: "padding-top: 10px")%>
        <p class="flow-text" style="margin-bottom: 0"><%= @user.name %></p>
      </div>
      <div id="user_content" class="col s12 l8">
        <% @owned_organizations.each do |org| %>
          <div class="row">
            <div class="col s7 offset-s1">
              <h4><%= org.name %></h4>
            </div>
            <div class="col s4 center" style="margin-top: 24px">
              <%= link_to "Manage", org, class: "btn-small theia_blue"%>
            </div>
          </div>
        <% end %>
        <% if @owned_organizations.count == 0 %>
          <div style="margin-top: 64px"></div>
        <% end %>
        <div class="row center">
          <div class="col s12 m6">
            <%=	 link_to "New Organization", new_organization_path, class: "btn-large theia_blue" %>
          </div>
          <div class="col s12 hide-on-med-and-up" style="padding: 8px"></div>
        </div>
      </div>
    </div>
  </div>
</div>