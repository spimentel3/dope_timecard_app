<%= provide(:title, "Sign Up") %>

<div class="hide-on-small-and-down" style="padding-top: 32px"></div>
<div class="row">
  <div class="z-depth-2 white col s12 m8 offset-m2 l4 offset-l4" style="position: relative">
    <div class="center">
      <h2>Sign up</h2>
    </div>
    <div class="row" style="padding-bottom: 16px">
      <div class="col s12 m8 offset-m2">
        <%= form_for(@user, url: signup_path) do |f| %>
          <div class="input-field">
            <%= f.text_field :name %>
            <%= f.label :name %>
          </div>

          <div class="input-field">
            <%= f.text_field :email %>
            <%= f.label :email %>
          </div>

          <div class="input-field">
            <%= f.password_field :password %>
            <%= f.label :password %>
          </div>

          <div class="input-field">
            <%= f.password_field :password_confirmation %>
            <%= f.label :password_confirmation, "Confirmation" %>
          </div>

          <br>
          <%= f.submit "Create Account", class: "btn theia_blue", style: "margin-top: 16px;" %>
        <% end %>
      </div>
    </div>
    <div class="card white darken-1 hide-on-small-and-down" style="width: 200px; position: absolute; top: 25%; right: -100px;">
      <%= render 'shared/error_messages_user' %>
    </div>
  </div>
</div>